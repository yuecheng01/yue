    <style name="defaultThem" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccentblue</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/colorAccentblue</item>
        <item name="colorAccent">@color/colorAccentblue</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:colorControlNormal" tools:targetApi="lollipop">@color/white</item>
        <item name="android:colorControlActivated" tools:targetApi="lollipop">@color/white</item>
        <item name="android:colorControlHighlight" tools:targetApi="lollipop">@color/white</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
        <item name="android:textColorSecondary">@color/white</item>
        <!--自定义颜色-->
        <item name="dialogTextColor">@color/colorAccentblue</item>
        <item name="android:shape">@drawable/solid_shap_blue</item>
    </style>

